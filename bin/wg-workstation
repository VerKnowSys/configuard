#!/bin/sh

. src/common

load_configuard
validate_config
define_process_name


if [ "Darwin" != "${OS_NAME}" ]; then
    error "Wireguard workstation is supposed to be Darwin host!"
fi
chmod 600 "${wireguard_conf}"

# main():
while true; do
    # validate that wireguard interface's been created:
    pgrep "${_wg_name}" >/dev/null 2>&1
    if [ "0" != "${?}" ]; then
        restart_tunnel
    fi

    ping -c1 "${main_net}.1.1" >/dev/null 2>&1
    if [ "0" != "${?}" ]; then
        restart_tunnel
    fi

    sleep "${_check_interval}"
done
