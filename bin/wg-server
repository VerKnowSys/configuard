#!/bin/sh

. src/common

load_configuard
validate_config
define_process_name


if [ "FreeBSD" != "${_os_name}" ]; then
    error "Wireguard server is supposed to be HardenedBSD host!"
fi

# main():
while true; do
    # validate that wireguard interface's been created:
    pgrep "${_wg_name}" >/dev/null 2>&1
    if [ "0" != "${?}" ]; then
        echo "Restarting ${_wg_interface} tunnelâ€¦"
        eval "${wireguard_quick} down ${_wg_interface}"
        eval "${wireguard_quick} up ${_wg_interface} &"
    fi
    sleep "${_check_interval}"
done
