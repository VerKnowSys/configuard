#!/bin/sh
# uninstall launchd script that manages WG client
# blame: @dmilith

. src/common

load_configuard
validate_config
define_process_name

case "${_os_name}" in
    Darwin)
        launchctl unload -w "${HOME}/Library/LaunchAgents/com.wireguard.plist"
        rm -vf "/usr/local/bin/wg-workstation" "${HOME}/Library/LaunchAgents/com.wireguard.plist"
        ;;

    FreeBSD)
        igni wg stop
        rm /Shared/Igniters/wg.igni
        for _pid in $(ps axv | grep -v grep | grep wg-quick | awk '{print $1}'); do
            kill -TERM "${_pid}"
        done
        ;;
esac
